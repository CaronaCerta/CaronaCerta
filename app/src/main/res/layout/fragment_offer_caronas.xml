<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/offer_carona_autocomplete_origin"
        android:id="@+id/offer_carona_autocomplete_origin"
        android:layout_toStartOf="@+id/offer_carona_hint"
        android:layout_below="@+id/offer_carona_hint"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp" />

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/offer_autocomplete_destination"
        android:id="@+id/offer_carona_autocomplete_destination"
        android:layout_toStartOf="@+id/offer_carona_autocomplete_origin"
        android:layout_below="@+id/offer_carona_autocomplete_origin"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp" />

    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timePicker"
        android:layout_below="@+id/offer_carona_autocomplete_destination"
        android:layout_centerHorizontal="true"
        android:padding="10dp" />

    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/datePicker"
        android:calendarViewShown="false"
        android:layout_below="@+id/timePicker"
        android:layout_centerHorizontal="true"
        android:padding="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/offer_carona_confirm"
        android:id="@+id/offer_carona_confirm"
        android:layout_below="@+id/datePicker"
        android:layout_centerHorizontal="true"
        android:padding="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/offer_carona_hint"
        android:id="@+id/offer_carona_hint"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
