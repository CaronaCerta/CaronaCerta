<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_vertical"
        android:layout_marginTop="20pt"
        android:gravity="center_horizontal"
        android:text="@string/editar_motorista_title"
        android:textSize="25sp"
        android:typeface="sans" />

    <!-- License Driver Label -->
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="@string/editar_motorista_licence_driver_number" />

    <!-- License Driver TextField -->
    <EditText
        android:id="@+id/editLicenseDriverNumber"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/editar_motorista_licence_driver_number_hint"
        android:inputType="number" />

    <!-- License Driver Date Label -->
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:text="@string/editar_motorista_licence_driver_date" />

    <!-- License Driver Date TextField -->
    <EditText
        android:id="@+id/editLicenseDriverDate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/editar_motorista_licence_driver_date_hint"
        android:inputType="date" />

    <Button
        android:id="@+id/btnEdit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:background="#ff6347"
        android:text="@string/editar_motorista_button"
        android:textColor="#fff" />
</LinearLayout>
