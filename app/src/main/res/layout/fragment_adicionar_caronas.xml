<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/datePicker"
        android:calendarViewShown="false"
        android:layout_below="@+id/timePicker"
        android:layout_centerHorizontal="true"
        android:padding="10sp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_carona_confirm"
        android:id="@+id/add_carona_confirm"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true" />

    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timePicker"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="10sp" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/datePicker"
        android:measureWithLargestChild="true"
        android:paddingBottom="50sp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="fill_parent" >

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:hint="@string/add_caronas_name_hint"
                android:id="@+id/add_caronas_name_1"
                android:padding="10dp"
                android:layout_column="0"
                android:layout_weight="1" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:hint="@string/add_caronas_num_hint"
                android:id="@+id/add_caronas_num_1"
                android:padding="10dp"
                android:layout_column="1"
                android:layout_weight="1"
                android:inputType="phone" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:hint="@string/add_caronas_name_hint"
                android:id="@+id/add_caronas_name_2"
                android:padding="10dp"
                android:layout_column="0"
                android:layout_weight="1" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:hint="@string/add_caronas_num_hint"
                android:id="@+id/add_caronas_num_2"
                android:padding="10dp"
                android:layout_column="1"
                android:layout_weight="1"
                android:inputType="phone" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:hint="@string/add_caronas_name_hint"
                android:id="@+id/add_caronas_name_3"
                android:padding="10dp"
                android:layout_column="0"
                android:layout_weight="1" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:hint="@string/add_caronas_num_hint"
                android:id="@+id/add_caronas_num_3"
                android:padding="10dp"
                android:layout_column="1"
                android:layout_weight="1"
                android:inputType="phone" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:hint="@string/add_caronas_name_hint"
                android:id="@+id/add_caronas_name_4"
                android:padding="10dp"
                android:layout_column="0"
                android:layout_weight="1" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:hint="@string/add_caronas_num_hint"
                android:id="@+id/add_caronas_num_4"
                android:padding="10dp"
                android:layout_weight="1"
                android:layout_column="1"
                android:inputType="phone" />
        </TableRow>

    </TableLayout>


</RelativeLayout>
