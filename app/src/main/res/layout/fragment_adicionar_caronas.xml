<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/add_carona"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="@string/add_carona"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="122dp" />

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/autocomplete_origin"
        android:id="@+id/autocomplete_origin"
        android:layout_marginTop="30dp"
        android:layout_toStartOf="@+id/add_carona"
        android:minWidth="200dp"
        android:layout_below="@+id/add_carona"
        android:layout_alignStart="@+id/add_carona"
        android:layout_alignRight="@+id/add_carona"
        android:layout_alignEnd="@+id/add_carona" />

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/autocomplete_destination"
        android:id="@+id/autocomplete_destination"
        android:layout_toStartOf="@+id/add_carona"
        android:minWidth="200dp"
        android:layout_below="@+id/autocomplete_origin"
        android:layout_alignLeft="@+id/autocomplete_origin"
        android:layout_alignStart="@+id/autocomplete_origin"
        android:layout_alignRight="@+id/autocomplete_origin"
        android:layout_alignEnd="@+id/autocomplete_origin" />

    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timePicker"
        android:layout_below="@+id/autocomplete_destination"
        android:layout_centerHorizontal="true" />

    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/datePicker"
        android:layout_below="@+id/timePicker"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
